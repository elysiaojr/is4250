<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.ScannerApp" parent="Theme.Material3.Light.NoActionBar">
        <item name="colorPrimary">#3368B7</item>
        <item name="colorSecondaryContainer">@color/nav_bar_active_indicator</item>
    </style>

    <!-- Base application theme. -->
    <style name="Base.Theme.ScannerApp" parent="Theme.Material3.DayNight.NoActionBar">
    <item name="colorSecondaryContainer">@color/nav_bar_grey</item>
    </style>

    <style name="Widget.App.NavBarActiveIndicator_consumables" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/very_light_consumables</item>
    </style>

    <style name="Widget.App.NavBarActiveIndicator_batches" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/very_light_batches</item>
    </style>

    <style name="Widget.App.NavBarActiveIndicator_records" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/very_light_records</item>
    </style>

    <style name="Widget.App.RadioButton_consumables" parent="Widget.Material3.CompoundButton.RadioButton">
        <item name="buttonTint">@color/button_tint_consumables</item>
    </style>

    <style name="Widget.App.RadioButton_batches" parent="Widget.Material3.CompoundButton.RadioButton">
        <item name="buttonTint">@color/button_tint_batches</item>
    </style>

    <style name="Widget.App.CheckBox_consumables" parent="Widget.Material3.CompoundButton.CheckBox">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.CheckBox_consumables</item>
    </style>

    <style name="ThemeOverlay.App.CheckBox_consumables" parent="">
        <!-- Container colors -->
        <item name="colorOnSurface">@color/dark_consumables</item>
        <item name="colorPrimary">@color/dark_consumables</item>
    </style>

    <style name="Widget.App.CheckBox_batches" parent="Widget.Material3.CompoundButton.CheckBox">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.CheckBox_batches</item>
    </style>

    <style name="ThemeOverlay.App.CheckBox_batches" parent="">
        <!-- Container colors -->
        <item name="colorOnSurface">@color/dark_batches</item>
        <item name="colorPrimary">@color/dark_batches</item>
    </style>

</resources>