<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:padding="16dp"
  tools:context=".ui.BatchDetailsActivity">

  <!-- Back Button -->
  <ImageView
    android:id="@+id/backButton"
    android:layout_width="wrap_content"
    android:layout_height="55dp"
    android:src="@drawable/baseline_arrow_back_24"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:clickable="true"
    app:maxImageSize="40dp" />

  <ScrollView
    android:layout_width="match_parent"
    android:layout_height="0dp"
    app:layout_constraintTop_toBottomOf="@+id/backButton"
    app:layout_constraintBottom_toBottomOf="parent">

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical">

      <ImageView
        android:id="@+id/batchIcon"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:src="@drawable/outline_medication_24" />

      <!-- Batch Number Display -->
      <TextView
        android:id="@+id/batchNumberTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Batch Number"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold" />

      <!-- Expiry Date Label and Value -->
      <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:rowCount="6"
        android:columnCount="2"
        android:layout_marginTop="10dp">

        <!-- Create Date -->
        <TextView
          android:layout_width="0dp"
          android:layout_weight="1"
          android:layout_height="wrap_content"
          android:text="Create Date:"
          android:textSize="16sp" />

        <TextView
          android:id="@+id/createDateTextView"
          android:layout_width="0dp"
          android:layout_weight="1"
          android:layout_height="wrap_content"
          android:text="01/01/2022"
          android:textStyle="bold"
          android:textSize="16sp" />

        <!-- Expiry Date -->
        <TextView
          android:layout_width="0dp"
          android:layout_weight="1"
          android:layout_height="wrap_content"
          android:text="Expiry Date:"
          android:textSize="16sp" />

        <TextView
          android:id="@+id/expiryDateTextView"
          android:layout_width="0dp"
          android:layout_weight="1"
          android:layout_height="wrap_content"
          android:text="19/05/2027"
          android:textStyle="bold"
          android:textSize="16sp" />

        <!-- Received Quantity -->
        <TextView
          android:layout_width="0dp"
          android:layout_weight="1"
          android:layout_height="wrap_content"
          android:text="Received Quantity:"
          android:textSize="16sp" />

        <TextView
          android:id="@+id/batchReceivedQuantityTextView"
          android:layout_width="0dp"
          android:layout_weight="1"
          android:layout_height="wrap_content"
          android:text="50"
          android:textStyle="bold"
          android:textSize="16sp" />

        <!-- Remaining Quantity -->
        <TextView
          android:layout_width="0dp"
          android:layout_weight="1"
          android:layout_height="wrap_content"
          android:text="Remaining Quantity:"
          android:textSize="16sp" />

        <TextView
          android:id="@+id/batchRemainingQuantityTextView"
          android:layout_width="0dp"
          android:layout_weight="1"
          android:layout_height="wrap_content"
          android:text="50"
          android:textStyle="bold"
          android:textSize="16sp" />

        <!-- Is Active -->
        <TextView
          android:layout_width="0dp"
          android:layout_weight="1"
          android:layout_height="wrap_content"
          android:text="Is Active:"
          android:textSize="16sp" />

        <TextView
          android:id="@+id/isActiveTextView"
          android:layout_width="0dp"
          android:layout_weight="1"
          android:layout_height="wrap_content"
          android:text="Active"
          android:textStyle="bold"
          android:textSize="16sp" />

        <!-- Consumable ID -->
        <TextView
          android:layout_width="0dp"
          android:layout_weight="1"
          android:layout_height="wrap_content"
          android:text="Consumable ID:"
          android:textSize="16sp" />

        <TextView
          android:id="@+id/consumableIdTextView"
          android:layout_width="0dp"
          android:layout_weight="1"
          android:layout_height="wrap_content"
          android:text="12345"
          android:textStyle="bold"
          android:textSize="16sp" />

      </GridLayout>

      <!-- Buttons at the bottom -->
      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">

        <!-- Delete Button -->
        <Button
          android:id="@+id/batchDeleteButton"
          android:layout_width="0dp"
          android:layout_weight="1"
          android:layout_height="wrap_content"
          android:drawableLeft="@drawable/baseline_delete_outline_24"
          android:text="Delete"
          android:textSize="16sp"
          android:textAlignment="textStart" />

        <!-- Edit Button -->
        <Button
          android:id="@+id/batchEditButton"
          android:layout_width="0dp"
          android:layout_weight="1"
          android:layout_height="wrap_content"
          android:drawableLeft="@drawable/baseline_edit_24"
          android:text="Edit"
          android:textSize="16sp"
          android:textAlignment="textStart" />
      </LinearLayout>
    </LinearLayout>
  </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
