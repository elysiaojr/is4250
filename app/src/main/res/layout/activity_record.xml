<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".ui.RecordActivity">

    <!-- Back Button -->
    <ImageView
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:src="@drawable/baseline_arrow_back_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:clickable="true"
        app:maxImageSize="40dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/recordIcon"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:src="@drawable/outline_medication_24"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />
        <!-- record ID Display -->
        <TextView
            android:id="@+id/recordTypeTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Batch Number"
            android:textAlignment="center"
            android:textSize="18sp"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:padding="16dp"
            android:layout_marginVertical="18sp"
            android:background="#c0c0c0" />

        <!-- Record Date Label and Value -->
        <GridLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:rowCount="1"
            android:columnCount="2"
            app:layout_constraintTop_toBottomOf="@+id/recordTypeTextView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">>


            <!-- Record ID -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Record ID: "
                android:textSize="16sp"
                android:textAlignment="viewStart"
                android:layout_gravity="start|center_vertical"
                android:gravity="start"
                android:layout_column="0"
                android:layout_marginBottom="10dp" />

            <TextView
                android:id="@+id/recordIDTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PUT IN"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textAlignment="viewStart"
                android:layout_gravity="end|center_vertical"
                android:gravity="start"
                android:layout_column="1"
                android:layout_marginBottom="10dp" />

            <!-- Record Date -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Recorded Date: "
                android:textSize="16sp"
                android:textAlignment="viewStart"
                android:layout_gravity="start|center_vertical"
                android:gravity="start"
                android:layout_column="0"
                android:layout_marginBottom="10dp" />

            <TextView
                android:id="@+id/createDateTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="01/01/2025"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textAlignment="viewStart"
                android:layout_gravity="end|center_vertical"
                android:gravity="start"
                android:layout_column="1"
                android:layout_marginBottom="10dp" />

            <!-- Expiry Date -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Expiry Date: "
                android:textSize="16sp"
                android:textAlignment="viewStart"
                android:layout_gravity="start|center_vertical"
                android:gravity="start"
                android:layout_column="0"
                android:layout_marginBottom="10dp" />

            <TextView
                android:id="@+id/expiryDateTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="01/01/2025"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textAlignment="viewStart"
                android:layout_gravity="end|center_vertical"
                android:gravity="start"
                android:layout_column="1"
                android:layout_marginBottom="10dp" />

            <!-- Record Quantity -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quantity: "
                android:textSize="16sp"
                android:textAlignment="viewStart"
                android:layout_gravity="start|center_vertical"
                android:gravity="start"
                android:layout_column="0"
                android:layout_marginBottom="10dp" />

            <TextView
                android:id="@+id/recordQuantityTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PUT IN"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textAlignment="viewStart"
                android:layout_gravity="end|center_vertical"
                android:gravity="start"
                android:layout_column="1"
                android:layout_marginBottom="10dp" />
            <!-- Batch ID -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Batch Number: "
                android:textSize="16sp"
                android:textAlignment="viewStart"
                android:layout_gravity="start|center_vertical"
                android:gravity="start"
                android:layout_column="0"
                android:layout_marginBottom="10dp" />

            <TextView
                android:id="@+id/batchIDTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textAlignment="viewStart"
                android:layout_gravity="end|center_vertical"
                android:gravity="start"
                android:layout_column="1"
                android:layout_marginBottom="10dp" />

            <!-- User ID -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="User: "
                android:textSize="16sp"
                android:textAlignment="viewStart"
                android:layout_gravity="start|center_vertical"
                android:gravity="start"
                android:layout_column="0"
                android:layout_marginBottom="10dp" />

            <TextView
                android:id="@+id/userIDTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textAlignment="viewStart"
                android:layout_gravity="end|center_vertical"
                android:gravity="start"
                android:layout_marginBottom="10dp" />
        </GridLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:padding="16dp"
            android:layout_marginVertical="18sp"
            android:background="#c0c0c0" />
        <!-- Buttons at the bottom -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="0dp">

            <Button
                android:id="@+id/createReturnRecordButton"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/mid_records_white_text_button"
                android:drawableLeft="@drawable/baseline_edit_24"
                android:text="Create Return Record"
                android:textSize="16sp"
                android:gravity="center"/>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:padding="16dp"
            android:layout_marginVertical="18sp"
            android:background="#c0c0c0" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
